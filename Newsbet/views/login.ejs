<% include ../partials/header %>

		<title>Login</title>
		<style>
			@import url(http://fonts.googleapis.com/css?family=Exo:100,200,400);
			@import url(http://fonts.googleapis.com/css?family=Source+Sans+Pro:700,400,300);

			body {
				position: fixed;
				overflow-y: scroll;
				width: 100%;
				top: 40%;
				right: 50%;
				bottom: 50%;
				width: auto;
				height: auto;
				background: url(https://cdn.pixabay.com/photo/2016/04/15/04/02/water-1330252__340.jpg);
				background-size: 100vw 100vh;
			}

			.header{
				float: left;
				color: #fff;
				font-family: 'Exo', sans-serif;
				font-size: 40px;
				font-weight: 200;
				position: relative;
				bottom: 20px;
				left: 65%;
			}

			.header div span {
				color: #F29E20 !important;
			}

			.login {
				position: relative;
				left: 50%;
				padding: 10px;
			}

			.text-input {
				width: 250px;
				height: 30px;
				background: transparent;
				border: 1px solid rgba(255,255,255,0.6);
				border-radius: 2px;
				color: #fff;
				font-family: 'Exo', sans-serif;
				font-size: 16px;
				font-weight: 400;
				padding: 4px;
			}
			.button-input {
				width: 250px;
				height: 35px;
				background: #fff;
				border: 1px solid #fff;
				cursor: pointer;
				border-radius: 2px;
				color: #a18d6c;
				font-family: 'Exo', sans-serif;
				font-size: 16px;
				font-weight: 400;
				padding: 6px;
				margin-top: 10px;
			}
			
		</style>

	<body oncontextmenu="return false">
		<div class="body"></div>
			<div class="header">
				<div>Login <span>Here</span></div>
			</div>
			<br>
			<form name="login" action="/login" method="POST">
				<div class="login" >
					<input type="text" placeholder="username" name="username" class="text-input"><br>
					<input type="password" placeholder="password" name="password" class="text-input"><br>
					<button class="button-input">Login</button>
					<!-- <button class="button-input">Register</button> -->
				</div>
			</form>

	</body>
</html>